<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	version="2.4"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee   http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>Oracle„ÄÅXMLdb monitor</display-name>
	<welcome-file-list>
		<welcome-file>Preview.jsp</welcome-file>
	</welcome-file-list>
	<!-- <servlet>
		<servlet-name>homePage</servlet-name>
		<jsp-file>/WEB-INF/DbStatus/Preview.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>homePage</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
 -->
	<filter>
		<filter-name>CharsetFilter</filter-name>
		<filter-class>com.founder.filter.CharsetFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharsetFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- <filter> <filter-name>loginFilter</filter-name> <filter-class>com.founder.filter.LoginFilter</filter-class> 
		</filter> <filter-mapping> <filter-name>loginFilter</filter-name> <url-pattern>/*</url-pattern> 
		</filter-mapping> -->
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- quartz begin -->


	<context-param>
		<param-name>config-file</param-name>
		<param-value>/quartz.properties</param-value>
	</context-param>

	<context-param>
		<param-name>shutdown-on-unload</param-name>
		<param-value>true</param-value>
	</context-param>

	<listener>
		<listener-class>org.quartz.ee.servlet.QuartzInitializerListener</listener-class>
	</listener>
	<!-- quartz end -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
</web-app>
